{
  "name": "Arslan-Ai",
  "description": "WhatsApp bot that runs using Baileys and creds.json session.",
  "repository": "https://github.com/Arslan-MD/Arslan-Ai", 
  "keywords": ["whatsapp", "bot", "baileys", "arslan-ai"],
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "env": {
    "AUTO_REACT": {
      "description": "React to all messages automatically",
      "value": "true"
    },
    "MODE": {
      "description": "Bot Mode: public or private",
      "value": "public"
    }
  },
  "scripts": {
    "postdeploy": "echo 'Arslan-Ai deployed on Heroku!'"
  }
}
